
  
    
        <header class='header'>
            <a href="#test">
                {{> logo}}
            </a>
            <nav class='header_nav'>
                <div class="header_nav_right">
                    {{> nav list=header}}
                </div>
            </nav>
        </header>
    <main class="main">
         {{#with info}}
            <div class="header_info">
                <h1 class="header_info">{{title}}</h1>
                <p class="header_info">{{description}}</p>
            </div>
        {{/with}}
        
        
        {{#with form}}
            <form class="form">
                <h2 class="form_title">{{title}}</h4>

                <div class="form_input_list">
                    {{#each inputs}}
                        <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" 
                        name="{{name}}" id="form-input-{{id}}"/>
                    {{/each}}
                </div>
                <div class="form_checkbox">
                    <input type="checkbox" name="{{checkbox.name}}" />
                    <label>{{checkbox.label}}</label>
                </div>

                <button type="submit" class="form_button">{{button}}</button>
                <p class="form_info">{{info}}</p>
            </form>
        {{/with}}

        
    </main>
    <div class="advantages">    
        {{#each advantages}}
            <div>
                <strong>{{title}}</strong>
                <p>{{text}}</p>
            </div>
        {{/each}}
    </div>
 
    <footer class="footer" id="test">
            <div>
                {{> logo}}
                <span class="footer_copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
                <div>
                    <span class="footer_title">{{title}}</span>
                    {{> nav list=links isVertical=true}}
                </div>
            {{/each}}
    </footer>
  
