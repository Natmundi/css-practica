
  
    
        <header class='header'>
            <a href="#test">
                {{> logo}}
            </a>
            <nav class='header_nav'>
                <div class="header_nav_right">
                    {{> nav list=header}}
                </div>
            </nav>
        </header>
    <main class="main">
        {{#with info}}
        <div class="info">
            <div class="info_content">
                <h1 class="info_title">{{title}}</h1>
                <p class="info_description">{{description}}</p>
            </div>
        </div>
        {{/with}}
       
        {{#with form}}
            <form class="form">
                <h2 class="form_title">{{title}}</h4>

                <div class="form_input_list">
                    {{#each inputs}}
                        <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" 
                        name="{{name}}" id="form-input-{{id}}"/>
                    {{/each}}
                </div>
                <div class="form_checkbox">
                    <input type="checkbox" name="{{checkbox.name}}" />
                    <label>{{checkbox.label}}</label>
                </div>

                <button type="submit" class="form_button">{{button}}</button>
                <p class="form_info">{{info}}</p>
            </form>
        {{/with}}
         
    </main>
    
    <div class="updates_block">
        {{#with updates}}
            <h4 class="list_title">{{title}}</h4>
            <div class="list_user">
                {{#each list}}
                    <div class="list_content">
                        <div class="list_sign"></div>
                        <span class="list_nickname">{{nickname}}</span>
                        <p class="list_description">{{description}}</p>
                    </div>
                {{/each}}
            </div>
            
            <a href="{{show_all.url}}" class="show_link">{{show_all.text}}</a>
           
        {{/with}}
    </div>

    <div class="expirience_block">
        {{#with expirience}}
            <div class="expirience_inline">
                <h3 class="expirience_title">{{title}}</h3>
            
                <span class="expirience_badge">{{badge}}</span>
            </div>
           <div class="expirience_column">
                {{#each list}}
                    <div class="expirience_list">
                        <h4 class="expirience_name">{{name}}</h4>
                        <p class="expirience_details">{{details}}</p>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </div>
   
    <footer class="footer" id="test">
            <div>
                {{> logo}}
                <span class="footer_copyright">Copyright 2023-2024</span>
            </div>
            {{#each footer}}
                <div>
                    <span class="footer_title">{{title}}</span>
                    {{> nav list=links isVertical=true}}
                </div>
            {{/each}}
    </footer>
  
