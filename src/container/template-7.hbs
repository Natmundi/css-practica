<div class='page'>
  <div class='page_content'>
    <div class='header'></div>
    <div class='hero_block'>
     {{> heroDark}}
    </div>

    <div class="about_block">
        {{> aboutDark}}
    </div>

    <div class="articles_block">
        <div class="articles_inline">Our articles</div>
        {{#each articles}}
            <div class='articles_card'>
                <div
                class='articles_image'
                style='background-image: url({{photo}})'
                ></div>
                <h2 class='articles_title'>{{name}}</h2>
                <p class='articles_text'>{{description}}</p>
        
                <div class="articles_button_block">
                    <a class="articles_button">Read all</a>
                </div>
             </div>
        {{/each}}
    </div>
  </div>
</div>